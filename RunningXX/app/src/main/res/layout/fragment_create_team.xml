<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:schemas="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.so2.running.CreateTeamFragment"
    android:background="#FFAD86"
    android:orientation="vertical"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="創團"
            android:id="@+id/textView"
            android:textSize="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="團名："
            android:id="@+id/textView1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="請輸入團名"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"
            android:layout_alignEnd="@+id/textView"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorHighlight="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="地點："
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="簡介："
            android:id="@+id/textView3"
            android:textColor="#000000"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="180sp"
            android:id="@+id/editText2"
            android:hint="簡略敘述團"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/summary"
            android:padding="6sp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="日期："
            android:textColor="#000000"
            android:id="@+id/textView4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textColor="#FFFFFF"
            android:id="@+id/textView7"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇時間"
            android:background="#00000000"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="290dp"
            android:id="@+id/timebutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_access_time_black_24dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇日期"
            android:background="#00000000"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="240dp"
            android:id="@+id/datebutton"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_date_range_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="隱私："
            android:textColor="#000000"
            android:id="@+id/textView5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!--<Button-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="選擇隱私"-->
            <!--android:layout_marginTop="155dp"-->
            <!--android:layout_alignTop="@+id/editText"-->
            <!--android:layout_marginLeft="90dp"-->
            <!--android:id="@+id/privacy_button"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="選擇時間"
            android:id="@+id/time"
            android:textColor="#000000"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="選擇日期"
            android:textColor="#000000"
            android:id="@+id/date"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="100dp" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/privacy_button"
            android:background="@drawable/privacybutton"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="160dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="未選擇"
            android:id="@+id/privacy"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="100dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/submit"
            android:shape="oval"
            android:text="送出"
            android:id="@+id/button"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="120dp" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type2"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="220dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/summary"
            android:text="select image"
            android:id="@+id/btnSelectPhoto"
            android:textColor="#000000"
            android:layout_alignTop="@+id/editText"
            android:layout_toEndOf="@+id/editText" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/viewImage"
            android:padding="3sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/datebutton"
            android:layout_above="@+id/btnSelectPhoto"
            android:layout_alignEnd="@+id/btnSelectPhoto" />


    </RelativeLayout>


</LinearLayout>
