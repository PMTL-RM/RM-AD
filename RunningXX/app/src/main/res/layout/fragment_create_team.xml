<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:schemas="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.so2.running.CreateTeamFragment"
    android:background="@android:color/background_light"
    >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="地點："
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/editText3"
            android:layout_alignStart="@+id/textView6" />

        <EditText
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:text="請輸入地點"
            android:layout_below="@+id/checkBox2"
            android:layout_toStartOf="@+id/editText3" />


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="團名："
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="日期:"
            android:id="@+id/textView3"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp" />

        <EditText
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_gravity="center"
            android:text="請輸入日期"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignStart="@+id/textView5" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="簡介:"
            android:id="@+id/textView4"
            android:layout_gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/editText" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_gravity="center"
            android:text="請輸入簡介"
            android:clickable="false"
            android:layout_below="@+id/textView7"
            android:layout_toEndOf="@+id/editText5" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="創團"
        android:id="@+id/textView5"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="私密:"
            android:id="@+id/textView7"
            android:layout_gravity="left|center_vertical"
            android:layout_alignTop="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_gravity="center"
            android:checked="true"
            android:text="公開"
            android:layout_below="@+id/editText2"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="47dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_gravity="right|bottom"
            android:checked="false"
            android:text="隱私"
            android:layout_above="@+id/editText3"
            android:layout_toEndOf="@+id/textView3" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="總里程:"
            android:id="@+id/textView6"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/editText5" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_gravity="center"
            android:text="請輸入長度"
            android:clickable="false"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/checkBox" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="儲存"
        android:id="@+id/team_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_gravity="center"
        android:text="請輸入團名"
        android:layout_above="@+id/editText5"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="65dp" />


</RelativeLayout>