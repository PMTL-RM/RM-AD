<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:schemas="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.so2.running.CreateTeamFragment"
    android:background="@color/White"
    android:orientation="vertical"
    android:baselineAligned="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="創團"
        android:id="@+id/textView"
        android:textSize="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="團名："
                android:id="@+id/textView1"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:hint="請輸入團名"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="85dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textColorHighlight="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="地點："
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="簡介："
                android:id="@+id/textView3"
                android:textColor="#000000"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="180sp"
                android:id="@+id/editText2"
                android:hint="簡略敘述團"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="70dp"
                android:background="@color/WhiteSmoke"
                android:padding="6sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="日期："
                android:textColor="#000000"
                android:id="@+id/textView4"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="路徑："
                android:textColor="#000000"
                android:id="@+id/textView8"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/start"
                android:text=""
                android:textColor="#000000"
                android:layout_marginTop="255dp"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/end"
                android:layout_marginTop="235dp"
                android:layout_marginLeft="100dp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/path"
                android:text="87人"
                android:id="@+id/path"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="240dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textColor="#FFFFFF"
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <!--<ImageButton-->
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇時間"
            android:background="#00000000"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="290dp"
            android:id="@+id/timebutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_access_time_black_24dp"
            />

            <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="選擇日期"-->
            <!--android:background="#00000000"-->
            <!--android:layout_marginTop="200dp"-->
            <!--android:layout_marginLeft="240dp"-->
            <!--android:id="@+id/datebutton"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:src="@drawable/ic_date_range_black_24dp" />-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="隱私："
                android:textColor="#000000"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="邀請好友："
                android:textColor="#000000"
                android:id="@+id/textView6"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/people"
                android:text="87人"
                android:id="@+id/addfriend"
                android:textSize="20dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="320dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friend_txv"
                android:text="人"
                android:textColor="@color/Black"
                android:layout_marginTop="325dp"
                android:layout_marginLeft="120dp"/>
            <!--<Button-->
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇隱私"
            android:layout_marginTop="155dp"
            android:layout_alignTop="@+id/editText"
            android:layout_marginLeft="90dp"
            android:id="@+id/privacy_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="選擇時間"
                android:id="@+id/time"
                android:textColor="#000000"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="選擇日期"
                android:textColor="#000000"
                android:id="@+id/date"
                android:layout_marginTop="195dp"
                android:layout_marginLeft="100dp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/privacy_button"
                android:background="@drawable/privacybutton"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="140dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="未選擇"
                android:id="@+id/privacy"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_marginTop="285dp"
                android:layout_marginLeft="80dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="75dp" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type2"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="75dp" />

            <!--<Button-->
            <!--android:layout_width="75dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_marginTop="150dp"-->
            <!--android:layout_marginLeft="295dp"-->
            <!--android:background="@color/RosyBrown"-->
            <!--android:text="新增團圖"-->
            <!--android:id="@+id/btnSelectPhoto"-->
            <!--android:textColor="@color/Black"/>-->

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:background="@color/WhiteSmoke"
                android:id="@+id/viewImage"
                android:padding="3sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="195dp" />
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/returnbutton"
        android:text="送出"
        android:textSize="25dp"
        android:id="@+id/button"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>