<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GhostWhite"
    tools:context=".MainActivity">

   <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/appLogo"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:layout_marginTop="45dp"
              android:scaleType="fitXY"
              android:src="@drawable/ic_logo"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true" />


   <Button
      android:id="@+id/sessionListButton"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:text="@string/sessionList"
      android:textColor="@color/White"
      android:background="@drawable/rounded_blue"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
       android:elevation="8dp"
       android:layout_marginRight="30dp"
       android:layout_marginLeft="30dp"
       android:layout_marginBottom="120dp" />

   <Button
        android:id="@+id/newSessionButton"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/newSession"
        android:textColor="@color/White"
        android:background="@drawable/rounded_blue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sessionListButton"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="8dp"
       android:layout_marginBottom="50dp" />

   <Button
       android:id="@+id/team_button"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:text="@string/CreateTeam"
       android:textColor="@color/White"
       android:background="@drawable/rounded_blue"
       android:elevation="8dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_margin="30dp" />


</RelativeLayout>

